<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/cartcardview"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgViewCartSample"
            android:layout_width="154dp"
            android:layout_height="105dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/germanpup"
             />

        <TextView
            android:id="@+id/CartProductName"
            android:layout_width="101dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="ProductName"
            app:layout_constraintStart_toEndOf="@+id/imgViewCartSample"
            app:layout_constraintTop_toBottomOf="@+id/IDCart">
        </TextView>

        <TextView
            android:id="@+id/CartProductPrice"
            android:layout_width="101dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="TotalPrice"
            app:layout_constraintStart_toEndOf="@+id/imgViewCartSample"
            app:layout_constraintTop_toBottomOf="@+id/CartProductName" />

        <TextView
            android:id="@+id/CartProductQuantity"
            android:layout_width="103dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Quantity"
            app:layout_constraintStart_toEndOf="@+id/imgViewCartSample"
            app:layout_constraintTop_toBottomOf="@+id/CartProductPrice" />

        <TextView
            android:id="@+id/IDCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="productID"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgViewCartSample"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarcartSample"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imgViewCartSample"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buynowbtn"
            android:layout_width="105dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Buy Now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/CartProductQuantity"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>